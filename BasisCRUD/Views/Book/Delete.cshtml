@model BasisCRUD.Models.Book

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<div>
    <h4>Book</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Isbn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Isbn)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookCost)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookCost)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-10">
            @if (Model?.Category?.CategoryName != null)
            {
                @Model.Category.CategoryName
            }
            else
            {
                <span>Category not available</span>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Publish)
        </dt>
        <dd class="col-sm-10">
            @if (Model?.Publish?.PublishName != null)
            {
                @Model.Publish.PublishName
            }
            else
            {
                <span>Publisher not available</span>
            }
        </dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="BookId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index">Back to List</a>
    </form>
</div>
