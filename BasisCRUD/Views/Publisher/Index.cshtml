@model IEnumerable<BasisCRUD.Models.Publisher>;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Publisher";
}

<h1>รายชื่อผู้จัดพิมพ์</h1>
<a class="btn btn-primary" asp-controller="Publisher" asp-action="Create">Create</a>
@if (Model.Count() <= 0)
{
    <div class="alert alert-danger">ไม่มีข้อมูลในระบบ</div>
} else
{
    <table id="mytable">
        <thead>
            <tr>
                <td>รหัสผู้จัดพิมพ์</td>
                <td>ชื่อผู้จัดพิมพ์</td>
                <td>ชื่อผู้ติดต่อ</td>
                <td>ที่อยู่</td>
                <td>เบอร์โทรศัพท์</td>
                <td>ปรับปรุง</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.PublishId</td>
                    <td>@item.PublishName</td>
                    <td>@item.ContactName</td>
                    <td>@item.Address</td>
                    <td>@item.Telephone</td>
                    <td>
                        <a class="btn btn-warning" asp-controller="Publisher" asp-action="Update" asp-route-id="@item.PublishId" onclick="return confirm('Do you want to update ID : @item.PublishId?')">Update</a>
                        <a class="btn btn-danger" asp-controller="Publisher" asp-action="Delete" asp-route-id="@item.PublishId" onclick="return confirm('Do you want to Delete ID : @item.PublishId?')">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
