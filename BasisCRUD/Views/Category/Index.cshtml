@model IEnumerable<BasisCRUD.Models.Category>;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Index";
}

<h1>รายชื่อประเภทหนังสือ</h1>
<a class="btn btn-primary" asp-controller="Category" asp-action="Create">Creat</a>

@if (Model.Count() <= 0)
{
    <div class="alert alert-danger">ไม่มีข้อมูลในระบบ</div>
} else
{
    <table id="mytable">
        <thead>
            <tr>
                <td>รหัสประเภทหนังสือ</td>
                <td>ประเภทหนังสือ</td>
                <td>ปรับปรุง</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CategoryId</td>
                    <td>@item.CategoryName</td>
                    <td>
                        <a class="btn btn-warning" asp-controller="Category" asp-action="Update" asp-route-id="@item.CategoryId" onclick="return confirm('Do you want to update ID : @item.CategoryId?')">Update</a>
                        <a class="btn btn-danger" asp-controller="Category" asp-action="Delete" asp-route-id="@item.CategoryId" onclick="return confirm('Do you want to Delete ID : @item.CategoryId?')">Delete</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
}